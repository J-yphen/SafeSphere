<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="24"
    android:viewportHeight="24">

    <!-- The safe zone for adaptive icons is a 66dp circle in the center.
         We group the paths and scale them down slightly to ensure they don't get clipped. -->
    <group
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:pivotX="12"
        android:pivotY="12">

        <!-- Center Point (Device) -->
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M12 12m-2 0a2 2 0 1 1 4 0 2 2 0 1 1-4 0"/>
        <!-- Pulse 1 (Inner Arc) -->
        <path
            android:strokeColor="#FFFFFF"
            android:strokeWidth="1.5"
            android:strokeAlpha="0.8"
            android:pathData="M12 6A6 6 0 0 0 6 12 6 6 0 0 0 12 18 6 6 0 0 0 18 12"/>
        <!-- Pulse 2 (Outer Arc) -->
        <path
            android:strokeColor="#FFFFFF"
            android:strokeWidth="1.5"
            android:strokeAlpha="0.4"
            android:pathData="M12 4A8 8 0 0 0 4 12 8 8 0 0 0 12 20 8 8 0 0 0 20 12"/>

    </group>
</vector>