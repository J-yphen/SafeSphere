<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/black"
                                                   tools:context=".ui.DetectionActivity">

    <!-- Camera preview -->
    <androidx.camera.view.PreviewView
            android:id="@+id/camera_preview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <!-- Photo Preview. Hidden by default. -->
    <ImageView
            android:id="@+id/captured_image_preview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:background="#99000000"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone"/>

    <!-- NEW: Video Player Preview. Hidden by default. -->
    <VideoView
            android:id="@+id/captured_video_preview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>

    <!-- Analyze button -->
    <Button
            android:id="@+id/analyze_button"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Analyze"
            android:visibility="gone"
            app:icon="@drawable/ic_safesphere_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    <!-- Recording animation ring -->
    <ProgressBar
            android:id="@+id/recording_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_ring"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/capture_button"
            app:layout_constraintEnd_toEndOf="@id/capture_button"
            app:layout_constraintStart_toStartOf="@id/capture_button"
            app:layout_constraintTop_toTopOf="@id/capture_button"
            tools:visibility="visible" />

    <!-- Capture button -->
    <ImageButton
            android:id="@+id/capture_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/capture_button_background"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_camera_capture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Instructions text -->
    <TextView
            android:id="@+id/capture_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tap for Photo, Hold for Video"
            android:textColor="@color/white"
            android:background="#80000000"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/capture_button"
            app:layout_constraintStart_toStartOf="@id/capture_button"
            app:layout_constraintEnd_toEndOf="@id/capture_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>